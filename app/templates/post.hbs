{{#let model.post as |post|}}
<article class="rounded overflow-hidden shadow-lg w-2/3 block mx-auto">
  {{#if post.image}}
    <img class="w-full" src={{post.image}} alt={{post.title}}>
  {{/if}}
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{{post.title}}</div>
    <p class="text-gray-700 text-base">
      {{markdown-to-html post.content tagName=""}}
    </p>
  </div>
</article>
{{/let}}
