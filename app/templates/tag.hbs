{{#let model.tag as |tag|}}
<header>
    <h1>{{tag.name}}</h1>
    <p>
      {{#if tag.description}}
        {{tag.description}}
      {{else}}
        A collection of {{plural model.posts.length empty='posts' singular='% post' plural='% posts'}}
      {{/if}}
    </p>
</header>
{{/let}}

<div>
{{#each model.posts as |post|}}
  {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
  <PostCard @post={{post}} />
{{/each}}
</div>
