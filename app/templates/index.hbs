{{#if (route-is "index")}}
    {{#if blog.description}}
    <header class="mt-4 text-center">
        <h2 class="">{{blog.description}}</h2>
    </header>
    {{/if}}
{{/if}}

<div class="">
{{#each (sort-by 'date:desc' model) as |post index|}}
    {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
    <PostCard @post={{post}} @index={{index}}/>
{{/each}}
</div>
